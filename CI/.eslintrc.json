{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
	"semi": ["error", "always"],
	"quotes": ["error", "single"],
	"spaced-comment": ["error", "always", {
	    "line": {
		"markers": ["/"],
		"exceptions": ["-", "+"]
	    },
	    "block": {
		"markers": ["!"],
		"exceptions": ["*"],
		"balanced": true
	    }
	}]
    }
}
